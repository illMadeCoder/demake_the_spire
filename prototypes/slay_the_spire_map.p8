pico-8 cartridge // http://www.pico-8.com
version 32
__lua__

-- 1 combat
-- 2 event
-- 3 elite
-- 4 shop
-- 5 rest
-- 6 boss

-- rules
-- map is a tree
-- root is boss
-- 3 branches from root
-- 3 leaf nodes entries
-- must exist 2 elites per branch
-- must exist 4 rest per branch
-- must exist 2 shop per branch
-- no elite nodes can touch
-- no rest nodes can touch
-- no shop nodes can touch
-- leaf nodes must be combat
-- all other nodes may be combat or event

function new_node(_map_node_type, _next_nodes)
	return {
		map_node_type = _map_node_type,
		next_nodes = _next_nodes or {}
	}
end

function new_map()
	local root = new_node(6)
	local leaf = new_node(1, {root})																					
	return root
end

function draw_node(_node, _x, _y)
	local c = 
		_node.map_node_type == 6
			and 8
			or 6
	circfill(_x, _y, 2, c)
end

map_prototype = new_map()

function _draw()
	cls()
end

